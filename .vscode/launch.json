{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run C++ with Input",
      "type": "cppdbg", // ✅ must be cppdbg on Mac/Linux
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build",
      "MIMode": "lldb", // ✅ use lldb for macOS
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb/lldb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}